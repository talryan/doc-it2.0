<center>


  <br><br>
    <div class="container-sm ">
    <div class="jumbotron">
        <h2 class="display-4"> Add New Doctor <h2>
  
            <%= form_for @doctor do |f| %>
    <div class="form-group">
                <%= f.label "Name:", class:"col-sm-2 col-form-label" %>
                <%= f.text_field :name, class:"form-control"%><br>
    </div>
    <div class="form-group">
                <%= f.label "Specialty:", class:"col-sm-2 col-form-label" %>
                <%= f.text_field :specialty, class:"form-control"%><br>
    </div>
    <div class="form-group">
                <%= f.label "Address:", class:"col-sm-2 col-form-label" %>
                <%= f.text_field :address, class:"form-control"%><br>
    </div>
    <div class="form-group">
                <%= f.label "City:" , class:"col-sm-2 col-form-label"%>
                <%= f.text_field :city, class:"form-control"%><br>
    </div>
    <div class="form-group">
                <%= f.label "State:" , class:"col-sm-2 col-form-label"%>
                <%= f.text_field :state, class:"form-control"%><br>
    </div>
    <div class="form-group">
                <%= f.label "Zipcode:", class:"col-sm-2 col-form-label" %>
                <%= f.text_field :zipcode, class:"form-control"%> <br>
    </div>
                <%= f.submit "Create", class:"btn btn-dark"%>

            <% end %>
    
    </div>
    </div>
</center>
