<div class="form-inline">
<%=form_tag('/doctors', method: 'get') do %>
 
<%=label_tag(:q, "Search By State:") %><br>
<%=text_field_tag(:q)%>
   <%= submit_tag "Search", class: "btn btn-dark my-2 my-sm-0" %>
   <%end%>
        </div>


<% if is_admin? %>
<%= link_to "Create a New Doctor", new_doctor_path%>
<% end %>




<% @doctors.each do |doctor| %>
<h4> <%= doctor.state%> </h4>
<%= link_to "#{doctor.name}", doctor_path(doctor)%>
<li><label> (<%= doctor.specialty%>)</label>
</ul>
<br> 
<%end%>


