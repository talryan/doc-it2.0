<center>
        <%=form_tag('/doctors', method: 'get') do %>
        <br>
        <%=label_tag(:q, "Search By State:") %>
        <%=text_field_tag(:q)%>
        <%= submit_tag "Search", class: "btn btn-dark my-2 my-sm-0" %>
        <%end%>
        </div>


<% if is_admin? %>
<%= link_to "Create a New Doctor", new_doctor_path%>
<% end %>



<br>
<% @doctors.each do |doctor| %>
<ul style="list-style-type:none;">
<h3> <%= doctor.state%> </h3>
<h4><%= link_to "#{doctor.name}", doctor_path(doctor)%></h4>
<li><label> (<%= doctor.specialty%>)</label>
</ul>
<br> 
<%end%>
</center>

